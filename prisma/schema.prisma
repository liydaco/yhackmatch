generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(uuid())
  name      String
  linkedIn  String
  dish      String
  session   String
  matchId   String?  // Optional since users start unmatched
  createdAt DateTime @default(now())
  matches   Match[]  @relation("UserMatches")
}

model Match {
  id        String   @id @default(uuid())
  users     User[]   @relation("UserMatches")
  createdAt DateTime @default(now())
}
